{
  "name": "Express-Wtith-Typescript-Boilerplate",
  "version": "1.0.0",
  "author": "Hassan Azhar <hassanazharkhan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --fix",
    "clean": "rimraf coverage build tmp",
    "dev": "nodemon -e 'yml, yaml, js, ts, tsx, json' -x 'ts-node' src/server.ts | bunyan -o simple",
    "typeorm": "./node_modules/.bin/ts-node ./node_modules/typeorm/cli.js",
    "compile": "tsc -p tsconfig.release.json",
    "watch:compile": "tsc -w -p tsconfig.release.json",
    "test": "npm run compile && npm run lint && jest --passWithNoTests",
    "test:unit": "npm test -- tests/unit",
    "test:integration": "npm test -- tests/integration",
    "test:watch": "npm test -- --watch",
    "test:watch:unit": "npm run test:unit -- --watch",
    "test:watch:integration": "npm run test:integration -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:coverage:unit": "npm run test:unit -- --coverage",
    "test:coverage:integration": "npm run test:integration -- --coverage"
  },
  "dependencies": {
    "@hapi/boom": "9.1.1",
    "@hapi/joi": "17.1.1",
    "@types/bunyan": "1.8.6",
    "@types/convict": "5.2.1",
    "@types/express": "4.17.8",
    "@types/express-bunyan-logger": "1.3.2",
    "@types/hapi__joi": "17.1.6",
    "@types/helmet": "4.0.0",
    "@types/node": "14.14.17",
    "@types/swagger-jsdoc": "3.0.2",
    "@types/swagger-ui-express": "4.1.2",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "body-parser": "1.19.0",
    "bunyan": "1.8.14",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "convict": "6.0.0",
    "eslint": "7.16.0",
    "eslint-plugin-import": "2.22.1",
    "express": "4.17.1",
    "express-bunyan-logger": "1.3.3",
    "helmet": "4.3.1",
    "pg": "8.5.1",
    "routing-controllers": "0.8.1",
    "swagger-jsdoc": "5.0.1",
    "swagger-ui-express": "4.1.6",
    "ts-node": "9.1.1",
    "typedi": "0.8.0",
    "typeorm": "0.2.29",
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@types/supertest": "2.0.10",
    "@types/jest": "26.0.15",
    "supertest": "6.1.3",
    "ts-jest": "26.4.4",
    "jest": "26.6.3",
    "nodemon": "2.0.6"
  }
}
